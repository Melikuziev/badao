.directions
	padding-top 30px
	padding-bottom 30px

	&__title
		margin-bottom 40px

	&__content
		position relative

	&__img
		img
			width 100%
			height 100%
			max-height 300px
			vertical-align top
			object-fit cover

	&__text
		white-space nowrap
		font-weight 500
		font-size 36px
		line-height 120%
		-webkit-text-stroke 2px #fff
		color transparent
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		&--active
			text-transform uppercase

@media (min-width: $mq.md)
	.directions
		padding-top 40px
		padding-bottom 40px

		&__title
			margin-bottom 60px

		&__content-grid
			display grid
			grid-template-columns 1fr 1fr

@media (min-width: $mq.lg)
	.directions
		&__img
			img
				max-height 100%

@media (min-width: $mq.xl)
	.directions
		padding-top 75px
		padding-bottom 75px

		&__title
			margin-bottom 99px

		&__content-grid
			grid-template-columns 1fr 1fr 1fr 1fr

		&__text
			font-size 48px
