.trainers
	padding-top 20px
	padding-bottom 30px

	&__title
		margin-bottom 42px

	&__content
		&:first-child
			margin-bottom 40px

	&__img
		position relative
		margin-bottom 39px
		img
			vertical-align top
			min-height 280px
			object-fit cover

	&__name-content
		position absolute
		bottom -19px

	&__name
		font-weight 700
		font-size 30px
		line-height 120%
		text-transform uppercase
		display inline-block
		&--transparent
			-webkit-text-stroke 2px #fff
			color transparent
			margin-right 2px

	&__text
		font-weight 500
		font-size 14px
		line-height 150%
		margin 0

@media (min-width: $mq.md)
	.trainers
		padding-bottom 40px

		&__title
			margin-bottom 60px

		&__content-flex
			display flex
			gap 20px

		&__content
			&:first-child
				margin 0

		&__img
			margin-bottom 44px
			img
				min-height 310px

		&__name-content
			bottom -24px

		&__name
			font-size 36px
			&--transparent
				margin-right 5px

		&__text
			font-size 16px

@media (min-width: $mq.xl)
	.trainers
		padding-top 75px
		padding-bottom 75px

		&__title
			margin-bottom 98px

		&__name-content
			bottom -30px
			left 5px

		&__img
			margin-bottom 50px

		&__name
			font-size 64px

		&__text
			font-size 18px
