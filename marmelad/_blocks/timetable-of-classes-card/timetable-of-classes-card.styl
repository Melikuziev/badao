.timetable-of-classes-card
	padding 30px 20px
	background-color #17171A
	display flex
	flex-direction column

	&__top-content
		display flex
		justify-content space-between
		margin-bottom 30px

	&__rate
		font-weight 700
		font-size 24px
		line-height 120%

	&__how-many-times
		line-height 120%
		align-self flex-end

	&__middle-content
		margin-bottom 40px

	&__text
		margin 0
		font-weight 500
		font-size 14px
		line-height 150%

	&__bottom-content
		margin-bottom 30px
		display flex
		gap 30px

	&__price
		font-weight 700
		font-size 30px
		line-height 120%

	&__old-price
		font-weight 700
		font-size 18px
		line-height 120%
		align-self flex-end
		text-decoration-line line-through

	.sign-up-btn
		max-width 350px
		align-self center

@media (min-width: $mq.md)
	.timetable-of-classes-card
		&__middle-content
			margin-bottom 60px

@media (min-width: $mq.xl)
	.timetable-of-classes-card
		padding 30px 30px 40px 30px

		&__top-content
			margin-bottom 50px

		&__rate
			font-size 36px

		&__text
			font-size 18px

		&__bottom-content
			gap 0
			justify-content space-between

		&__price
			font-size 36px

		&__old-price
			font-size 24px

		.sign-up-btn
			margin-top 0
