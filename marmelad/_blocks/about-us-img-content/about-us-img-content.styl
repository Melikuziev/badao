.about-us-img-content
	align-self center
	padding-bottom 70px

	&__img-content
		position relative

	&__img-1,
	&__img-2
		img
			vertical-align top

	&__img-1
		img
			height 300px
			width 320px

	&__img-2
		display flex
		align-items center
		justify-content center
		width 170px
		height 170px
		position absolute
		bottom -51px
		right -1px
		border 2px solid #FFFFFF
		border-radius 50%
		img
			width 100%
			max-width 150px
			height 100%
			max-height 150px
			object-fit cover

@media (min-width: $mq.md)
	.about-us-img-content
		flex 0 0 50%
		padding-bottom 0

		&__img-content
			width 100%
			max-width 354px

		&__img-1
			img
				height 436px
				width 354px

		&__img-2
			bottom -97px
			right 50px

@media (min-width: $mq.xl)
	.about-us-img-content
		align-self start

		&__img-content
			max-width 100%

		&__img-1
			img
				height 100%
				width 100%

		&__img-2
			bottom -118px
			right -15px
			width 420px
			height 420px
			img
				max-width 384px
				max-height 384px
