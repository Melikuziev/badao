.hero
	padding-top 55px
	position relative
	img
		max-width 100%
		height auto

	&__section
		position relative
		overflow hidden
		z-index 10

	&__header-info
		font-weight 500
		font-size 14px
		line-height 130%
		margin 0 0 35px 0

	&__title
		font-size 40px
		line-height 120%
		text-transform uppercase
		margin 0 0 30px 0
		br
			display none

	&__titles
		display none

	&__title-clone
		margin 0
		font-size 72px
		line-height 120%
		text-transform uppercase

	&__bottom-info
		font-weight 500
		font-size 14px
		line-height 150%
		margin 0 0 38px 0

	&__cover
		position absolute
		top 43px
		left 50%
		transform translateX(-50%)
		object-fit cover
		pointer-events none

@media (min-width: 360px)
	.hero
		&__title
			font-size 44px

@media (min-width: $mq.md)
	.hero
		&__inner
			padding-top 45px

		&__header-info
			font-weight 700
			font-size 16px
			width 100%
			max-width 222px
			margin 0 0 78px 0

		&__title
			text-align center
			font-size 64px
			margin 0 0 77px 0
			br
				display block

		&__bottom-content
			display flex
			justify-content space-between

		&__bottom-info
			font-size 16px
			width 100%
			max-width 380px
			margin 0

		&__cover
			top 40px

@media (min-width: $mq.xl)
	.hero
		&__inner
			padding-top 50px

		&__header-info
			margin 0 0 154px 0
			max-width 330px
			font-size 24px

		&__title
			display none

		&__titles
			display flex
			justify-content space-between
			margin-bottom 197px

		&__bottom-content
			justify-content start
			gap 493px

		&__bottom-info
			font-size 18px
			max-width 410px

		&__cover
			top 19px
